@page "/settings"
@using Kurvenanzeige.Core.Interfaces
@using Kurvenanzeige.Core.Configuration
@using Microsoft.Extensions.Options
@inject IOptions<PlcConnectionConfig> PlcConfig
@inject IDataRepository DataRepository
@inject ILogger<Settings> Logger
@rendermode InteractiveServer

<PageTitle>Settings - Kurvenanzeige</PageTitle>

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-12">
            <h2>Settings</h2>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">PLC Connection</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">IP Address</label>
                        <input type="text" class="form-control" value="@PlcConfig.Value.IpAddress" readonly />
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Port</label>
                            <input type="number" class="form-control" value="@PlcConfig.Value.Port" readonly />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Rack</label>
                            <input type="number" class="form-control" value="@PlcConfig.Value.Rack" readonly />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Slot</label>
                            <input type="number" class="form-control" value="@PlcConfig.Value.Slot" readonly />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">CPU Type</label>
                        <input type="text" class="form-control" value="@PlcConfig.Value.CpuType" readonly />
                    </div>
                    <div class="alert alert-info">
                        <small>To change PLC settings, edit appsettings.json and restart the application.</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Data Points</h5>
                </div>
                <div class="card-body">
                    @if (_dataPoints.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Display Name</th>
                                        <th>Tag</th>
                                        <th>Type</th>
                                        <th>Enabled</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var dp in _dataPoints)
                                    {
                                        <tr>
                                            <td>@dp.DisplayName</td>
                                            <td><small>@dp.TagName</small></td>
                                            <td><span class="badge bg-secondary">@dp.DataType</span></td>
                                            <td>
                                                @if (dp.IsEnabled)
                                                {
                                                    <i class="bi bi-check-circle-fill text-success"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-x-circle-fill text-danger"></i>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            No data points configured.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">System Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-3">Application</dt>
                        <dd class="col-sm-9">Kurvenanzeige - S7-1500 PLC Monitor</dd>

                        <dt class="col-sm-3">Version</dt>
                        <dd class="col-sm-9">1.0.0</dd>

                        <dt class="col-sm-3">Database</dt>
                        <dd class="col-sm-9">SQLite (kurvenanzeige.db)</dd>

                        <dt class="col-sm-3">Data Retention</dt>
                        <dd class="col-sm-9">7 days (raw data)</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<DataPointConfig> _dataPoints = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _dataPoints = await DataRepository.GetEnabledDataPointsAsync();
            Logger.LogInformation("Loaded {Count} data points", _dataPoints.Count);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading data points");
        }
    }
}
