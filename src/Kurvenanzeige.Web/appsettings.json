{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Kurvenanzeige.Infrastructure.Plc": "Debug"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=kurvenanzeige.db;Cache=Shared"
  },
  "PlcConnection": {
    "IpAddress": "192.168.0.1",
    "Port": 102,
    "Rack": 0,
    "Slot": 1,
    "CpuType": "S71500",
    "ConnectTimeout": 5000,
    "ReadTimeout": 2000,
    "ReconnectDelay": 5000,
    "MaxReconnectAttempts": 10
  },
  "DataPolling": {
    "PollingIntervalMs": 5000,
    "BatchSize": 50,
    "EnableBuffering": true,
    "BufferFlushIntervalMs": 1000
  },
  "DataRetention": {
    "RawDataRetentionDays": 7,
    "HourlyAggregateRetentionDays": 30,
    "DailyAggregateRetentionDays": 365,
    "CleanupIntervalHours": 1
  }
}
